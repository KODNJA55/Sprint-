        function afficherSpecialite(){
            var neaudDiv= document.getElementById('divSpe');

            var neaudSelect= document.forms['newEmp'].element['post'];

            if(neaudSelect.value == medecin){
                neaudDiv.style.display= "";
            }
            else{
                neaudDiv.style.display= "none";
            }
        }
    </script>
